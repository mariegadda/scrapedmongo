

<body class="grey lighten-2">

  <nav>
    <div class="nav-wrapper grey">
      <a href="#" class="brand-logo">Pitchfork Scraper</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li class="active"><a href="#" >Home</a></li>
        <li><a href="/saved">Saved Tracks</a></li>
        <li><a class="btn" id="scrape" href="#modal1">Scrape New Tracks</a></li>
      </ul>
    </div>
  </nav>

    <div class="container" id="title">
        <div class="row">
            <div class="col s12">
                <!-- <h1 class="grey-text text-darken-2 center-align">Pitchfork Scrape</h1> -->
                <h2 class="grey-text text-darken-2 center-align">Best New Tracks from Pitchfork</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
          <div class="articles" >
              <ul > {{#each hndlObject}}
                            <li>
                             <div class="card blue-grey darken-1 col s12">
                                  <div class="card-content white-text">
                                   <h5 > {{this.artist}}</h5>
                                     <br>
                                        {{this.title}}
                                        <a data-id="{{this.id}}" class="btn-floating" href="#modal3" id="savetrack"> save </a> 

                                        <a data-id="{{this.id}}" id="addnote" class="btn-floating halfway-fab btn-medium waves-effect waves-light" href="#modal2"><i class="material-icons">comment</a>
                                        
                                        </i> 
                                          <div data-id="{{this.id}}" class="card-action" id="comments">
                                            <p> <small> click here to see the most recent comment!</small> </p>
                                        {{!--    <p>{{this.note.name}}</p> --}}
                                        </div> 
                                    </div>
                                </div>
                            </li>                           
                         {{/each}}
                  </ul>
          </div>
        </div>
    </div>

      <!-- Modal for scrape button-->
    <div id="modal1" class="modal">
        <div class="modal-content">
            <h4>Scrape Complete!</h4>
            <p>Check out the Best New Tracks!</p>
        </div>
        <div class="modal-footer">
            <a href="/scrape" class="modal-action modal-close waves-effect waves-green btn-flat">Ok!</a>
        </div>
    </div>

{{!-- modal for comment button --}}
      <div id="modal2" class="modal modal-fixed-footer">
        <div class="modal-content">
           <div id="iddiv"></div>
             <h4>Add a Comment</h4>
               <div class="input-field col s6">
                 <input  id="name" type="text" class="validate">
                 <label for="name">Your Name</label>
             </div>
          <textarea id="textarea1" class="materialize-textarea"></textarea>
          <label for="textarea1">Comment</label>
        </div>
       <div class="modal-footer">
            <a href="#!" id="savenote" class="modal-action modal-close waves-effect waves-green btn-flat"> Ok!</a>
       </div>
    </div>

    {{!-- modal for save button --}}
     <div id="modal3" class="modal">
        <div class="modal-content">
            <h4>Saved!</h4>
            <p>Track added to your Saved Tracks</p>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ok!</a>
        </div>
    </div>

    {{!-- footer --}}
            <footer class="page-footer grey">
          <div class="container">
            <div class="row"
                <h5 class="white-text">Pitchfork Scraper</h5>
                <p class="grey-text text-lighten-4">Made with Content from www.pitchfork.com/reviews/best/tracks.</p>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            <a class="grey-text text-lighten-4 right" href="#!">mariegadda.com</a>
            </div>
          </div>
        </footer>
            
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="./app.js"></script>
</body>


